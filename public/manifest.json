{
  "manifest_version": 3,
  "name": "bKash PGW",
  "version": "1.0",
  "description": "A simple bKash PGW integration extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["activeTab", "notifications", "storage","background","alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://ext-poc.pgw-integration.bkash.com/*" 
  ]
}